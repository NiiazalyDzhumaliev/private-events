<h1>List of All events</h1>
<table class="table">
  <tr class="thead-dark">  
    <th>Title</th>
    <th>Description</th>
    <th>Location</th>
    <th>Date</th>
  </tr>
  <% @events.each do |event| %>
   <tr>
    <td><%= event.title %></td>
    <td><%= link_to event.desc, event_path(event.id)%></td>
    <td><%= event.location %></td>
    <td><%= event.date %></td>
  </tr>
<%end%>
</table>

<%= link_to "Create Event", new_event_path%>
